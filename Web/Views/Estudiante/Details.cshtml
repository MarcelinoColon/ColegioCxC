@using Aplicacion.Estudiante.DTOs
@model EstudianteDto

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Detalles del Estudiante</h2>
        <a asp-action="Index" class="btn btn-outline-secondary">
            &larr; Volver a la lista
        </a>
    </div>
    <hr />

    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Expediente del Alumno</h5>
        </div>

        <div class="card-body">
            <div class="row">
                <div class="col-md-5 mb-4">
                    <h5 class="text-primary border-bottom pb-2">Información Personal</h5>

                    <dl class="row mt-3">
                        <dt class="col-sm-4 text-muted">Matrícula:</dt>
                        <dd class="col-sm-8 fw-bold">@Model.Matricula</dd>

                        <dt class="col-sm-4 text-muted">Nombre:</dt>
                        <dd class="col-sm-8">@Model.Nombre</dd>

                        <dt class="col-sm-4 text-muted">Apellido:</dt>
                        <dd class="col-sm-8">@Model.Apellido</dd>
                    </dl>
                </div>

                <div class="col-md-7 border-start">
                    <h5 class="text-success border-bottom pb-2">Tutores Asignados</h5>

                    <div class="mt-3">
                        @if (Model.Tutores != null && Model.Tutores.Any())
                        {
                            <ul class="list-group list-group-flush">
                                @foreach (var tutor in Model.Tutores)
                                {
                                    <li class="list-group-item d-flex justify-content-between align-items-start">
                                        <div class="ms-2 me-auto">
                                            <div class="fw-bold">@tutor.Nombre @tutor.Apellido</div>
                                            <span class="text-muted small">
                                                Cédula: @(tutor.Cedula ?? "No registrada") <br />
                                                Tel: @(tutor.Telefono ?? "No registrado")
                                            </span>
                                        </div>
                                        <span class="badge bg-primary rounded-pill">Tutor</span>
                                    </li>
                                }
                            </ul>
                        }
                        else
                        {
                            <div class="alert alert-warning d-flex align-items-center" role="alert">
                                <div>
                                    Este estudiante no tiene tutores registrados actualmente.
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="card-footer text-muted text-end">
            <a asp-action="Upsert" asp-route-id="@Model.Id" class="btn btn-warning">
                Editar Estudiante
            </a>
        </div>
    </div>
</div>